<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/cell_3_1"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_2_1"
            app:layout_constraintTop_toBottomOf="@+id/cell_2_1" />

        <TextView
            android:id="@+id/cell_3_2"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_2_2"
            app:layout_constraintTop_toBottomOf="@+id/cell_2_2" />

        <TextView
            android:id="@+id/cell_3_3"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_2_3"
            app:layout_constraintTop_toBottomOf="@+id/cell_2_3" />

        <TextView
            android:id="@+id/cell_3_4"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_2_4"
            app:layout_constraintTop_toBottomOf="@+id/cell_2_4" />

        <TextView
            android:id="@+id/cell_4_3"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_3_3"
            app:layout_constraintTop_toBottomOf="@+id/cell_3_3" />

        <TextView
            android:id="@+id/cell_1_2"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@+id/cell_1_1"
            app:layout_constraintTop_toTopOf="@+id/cell_1_1" />

        <TextView
            android:id="@+id/cell_4_4"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_3_4"
            app:layout_constraintTop_toBottomOf="@+id/cell_3_4" />

        <TextView
            android:id="@+id/cell_2_2"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_1_2"
            app:layout_constraintTop_toBottomOf="@+id/cell_1_2" />

        <TextView
            android:id="@+id/cell_2_3"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_1_3"
            app:layout_constraintTop_toBottomOf="@+id/cell_1_3" />

        <TextView
            android:id="@+id/cell_1_4"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@+id/cell_1_3"
            app:layout_constraintTop_toTopOf="@+id/cell_1_1"
            tools:ignore="HardcodedText"
            android:background="@drawable/defaultcellsbackground" />

        <TextView
            android:id="@+id/cell_2_1"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_1_1"
            app:layout_constraintTop_toBottomOf="@+id/cell_1_1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cell_1_3"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toStartOf="@+id/cell_1_2"
            app:layout_constraintTop_toTopOf="@+id/cell_1_1" />

        <TextView
            android:id="@+id/cell_2_4"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_1_4"
            app:layout_constraintTop_toBottomOf="@+id/cell_1_4" />

        <TextView
            android:id="@+id/cell_1_1"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cell_4_1"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_3_1"
            app:layout_constraintTop_toBottomOf="@+id/cell_3_1" />

        <TextView
            android:id="@+id/cell_4_2"
            android:layout_width="@dimen/cell_width_normal"
            android:layout_height="@dimen/cell_width_normal"
            android:background="@drawable/defaultcellsbackground"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="@+id/cell_3_2"
            app:layout_constraintTop_toBottomOf="@+id/cell_3_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="340dp"
        android:text="זמן"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/screenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="00:00"
        android:textSize="33sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:text="צעדים"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/screenMoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="000"
        android:textSize="33sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/buttonwoodbackground"
        android:text="מסך בית"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRestart" />

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="150sp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/buttonwoodbackground"
        android:text="התחל מחדש"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="קושי"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/screenDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <TextView
        android:id="@+id/stepAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:text="000"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="@+id/screenMoves"
        app:layout_constraintTop_toTopOf="@+id/screenMoves" />


</androidx.constraintlayout.widget.ConstraintLayout>

