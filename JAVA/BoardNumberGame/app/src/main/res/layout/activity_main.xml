<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/cell_1_1"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="1"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cell_3_1"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="9"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/cell_1_1"
            app:layout_constraintTop_toBottomOf="@+id/cell_2_1" />

        <TextView
            android:id="@+id/cell_3_2"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="10"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_3_1"
            app:layout_constraintTop_toTopOf="@+id/cell_3_1" />

        <TextView
            android:id="@+id/cell_3_3"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="11"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_3_2"
            app:layout_constraintTop_toTopOf="@+id/cell_3_1" />

        <TextView
            android:id="@+id/cell_3_4"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="12"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_3_3"
            app:layout_constraintTop_toTopOf="@+id/cell_3_1" />

        <TextView
            android:id="@+id/cell_4_1"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="13"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/cell_3_1"
            app:layout_constraintTop_toBottomOf="@+id/cell_3_1" />

        <TextView
            android:id="@+id/cell_4_3"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="15"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_4_2"
            app:layout_constraintTop_toTopOf="@+id/cell_4_1" />

        <TextView
            android:id="@+id/cell_1_2"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="2"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_1_1"
            app:layout_constraintTop_toTopOf="@+id/cell_1_1" />

        <TextView
            android:id="@+id/cell_4_2"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="14"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_4_1"
            app:layout_constraintTop_toTopOf="@+id/cell_4_1" />

        <TextView
            android:id="@+id/cell_4_4"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="16"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_4_3"
            app:layout_constraintTop_toTopOf="@+id/cell_4_1" />

        <TextView
            android:id="@+id/cell_2_2"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="6"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_2_1"
            app:layout_constraintTop_toTopOf="@+id/cell_2_1" />

        <TextView
            android:id="@+id/cell_2_3"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="7"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_2_2"
            app:layout_constraintTop_toTopOf="@+id/cell_2_1" />

        <TextView
            android:id="@+id/cell_1_4"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="4"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_1_3"
            app:layout_constraintTop_toTopOf="@+id/cell_1_1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cell_2_1"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="5"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="@+id/cell_1_1"
            app:layout_constraintTop_toBottomOf="@+id/cell_1_1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cell_1_3"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="3"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_1_2"
            app:layout_constraintTop_toTopOf="@+id/cell_1_1" />

        <TextView
            android:id="@+id/cell_2_4"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_width"
            android:background="@drawable/defaultcellsbackground"
            android:text="8"
            android:textAlignment="center"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/cell_2_3"
            app:layout_constraintTop_toTopOf="@+id/cell_2_3"
            tools:text="8" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="TIME"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/boardlayout"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Moves"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/screenMoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="Difficulty"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/screenDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="500"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/textView9" />

    <TextView
        android:id="@+id/stepAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/screenMoves"
        app:layout_constraintStart_toStartOf="@+id/screenMoves" />

    <TextView
        android:id="@+id/screenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="00:00"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:layout_marginStart="32dp"
        android:background="@drawable/buttonwoodbackground"
        android:text="Return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRestart" />

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="150sp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/buttonwoodbackground"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

